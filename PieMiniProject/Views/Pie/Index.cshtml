@model IEnumerable<PieMiniProject.ModelAccess.Models.Pie>
@{
    ViewData["Title"] = "Index";
}
@*//<partial name="_AlertPartial" />*@
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Pie Details</h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Pie" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Add Pie</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                ShortDescription
            </th>
            <th>
                LongDescription
            </th>
            <th>
                Price
            </th>
            <th>
                Image
            </th>
            
            <th>
                <center>Action</center>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td><a asp-controller="Pie" asp-action="Details" asp-route-id="@c.Id">@c.Name</a></td>
                <td>@c.ShortDescription</td>
                <td>@c.LongDescription</td>
                <td>@c.Price</td>
                <td><img src="@c.ImageUrl" height="100" width="100"></td>

                <td>
                    <div class="btn-group m-75" role="group">
                        <a asp-controller="Pie" asp-action="Edit" asp-route-id="@c.Id" class="btn btn-outline-primary"><i class="bi bi-pencil">Update</i></a>
                        <a asp-controller="Pie" asp-action="Delete" asp-route-id="@c.Id" class="btn btn-outline-primary"><i class="bi bi-trash3">Delete</i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>


</table>



