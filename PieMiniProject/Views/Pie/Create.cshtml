@model PieMiniProject.ModelAccess.Models.Pie
@{
    ViewData["Title"] = "Create";
}

<form method="post">
    <div class="border p-3 m-4">
        <div class="row-cols-2">
            <h2 class="text-primary">
                Add Pie
            </h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-bg-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-bg-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-bg-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="ShortDescription"></label>
            <input asp-for="ShortDescription" class="form-control" />
            <span asp-validation-for="ShortDescription" class="text-bg-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="LongDescription"></label>
            <input asp-for="LongDescription" class="form-control" />
            <span asp-validation-for="LongDescription" class="text-bg-danger"></span>

        </div>

        <button type="submit" class="btn btn-primary" style="width 150px">Submit</button>
        <a asp-controller="Pie" asp-action="Index" class="btn btn-secondary style="width 150px">Back</a>
    </div>

</form>
@section Scripts
    {
    <partial name="_ValidationScriptsPartial.cshtml" />
}



